  "animations": {
    "none": {
      "duration": "0ms",
      "easing": "linear"
    },
    "fade": {
      "enter": "opacity-0 -> opacity-100",
      "duration": "300ms",
      "easing": "ease-out"
    },
    "fade-slow": {
      "enter": "opacity-0 -> opacity-100",
      "duration": "600ms",
      "easing": "ease-in-out"
    },
    "slide": {
      "enter": "translateY(20px) opacity-0 -> translateY(0) opacity-100",
      "duration": "400ms",
      "easing": "ease-out"
    },
    "bounce": {
      "enter": "scale-95 opacity-0 -> scale-100 opacity-100",
      "duration": "500ms",
      "easing": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "glitch": {
      "effect": "Effet de glitch numérique",
      "duration": "200ms"
    }
  },
  "shadows": {
    "none": "shadow-none",
    "subtle": "shadow-sm",
    "medium": "shadow-md",
    "strong": "shadow-xl",
    "hard": "shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]",
    "glow": "shadow-lg shadow-primary-500/25",
    "neon": "shadow-[0_0_20px_rgba(var(--primary),0.5)]",
