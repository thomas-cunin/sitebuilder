---
import { t, type Lang } from '@/lib/content';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<section class="section bg-gradient-to-r from-primary-600 to-secondary-600">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="heading-2 text-white">
        {t('cta', 'title', lang)}
      </h2>
      <p class="mt-4 text-lg text-primary-100">
        {t('cta', 'subtitle', lang)}
      </p>
      <a
        href="#contact"
        class="mt-8 inline-flex items-center gap-2 bg-white text-primary-600 hover:bg-primary-50 font-semibold px-8 py-4 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl"
      >
        {t('cta', 'button', lang)}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
